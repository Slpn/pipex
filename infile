 if (pipe(fd) == -1)
        perror("pipe");
    pid = fork();
    if (pid == -1) {
        printf("fork(): error");
        return (1);
    } else if (pid == 0) {
        close(fd[0]);
        while (get_next_line(0, &line) != 0) {
            if (ft_strnstr(line, av[2], ft_strlen(av[2])) != 0)
                exit(0);
            write(fd[1], line, ft_strlen(line));
        }
    } else {
        close(fd[1]);
        dup2(fd[0], STDIN_FILENO);
        wait(0);
    }